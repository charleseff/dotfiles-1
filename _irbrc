if defined?(Bundler)
  Gem.post_reset_hooks.reject! do |hook|
    hook.source_location.first =~ %r{/bundler/}
  end

  Gem::Specification.reset
  load "rubygems/custom_require.rb"
end

%w(

  pry
  pry-nav
  pry-coolline
  pry-doc

).each do |gem|
  begin
    require gem
  rescue LoadError
    warn "#{gem} is not installed."
  end
end

Pry.start if defined?(Pry)
